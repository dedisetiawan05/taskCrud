<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Daftar Hero</title>
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <script src="/js/bootstrap.min.js"></script>
</head>
<body>
    <%- include('../components/navbar.ejs')%>
    <div class="container">
        <center><h1 class="mt-3">Form Tambah Hero</h1></center>
        <form action="/addHero" method="POST">
            <div class="row mb-4">
            <div class="form-outline">
                <label class="form-label" for="form6Example1">Nama Hero</label>
                <input type="text" id="form6Example1" class="form-control" name="nameHero" />
            </div>
            </div>
            <div class="form-outline mb-4">
                <label class="form-label" for="form6Example3">Role</label>
                <select class="form-select" aria-label="Default select example" name="idRole">
                    <option selected>Pilih Salah Satu</option>
                    <% role.forEach((role) => { %>
                    <option value=<%= role.idRole %>><%= role.nameRole %></option>
                    <% }) %>
                </select>
            </div>
        <div class="form-outline mb-4">
            <label class="form-label" for="form6Example4">Durability</label>
            <input type="number" id="form6Example4" class="form-control" name="durability" />
        </div>
        <div class="form-outline mb-4">
            <label class="form-label" for="form6Example5">offense</label>
            <input type="number" id="form6Example5" class="form-control" name="offense" />
        </div>
        <div class="form-outline mb-4">
            <label class="form-label" for="form6Example6">efekSkill</label>
            <input type="number" id="form6Example6" class="form-control" name="effekSkill" />
        </div>
        <div class="form-outline mb-4">
            <label class="form-label" for="form6Example7">Tingkat Kesulitan</label>
            <input type="number" id="form6Example5" class="form-control" name="difficulty" />
        </div>
        <button type="submit" class="btn btn-primary btn-block mb-4">Tambah Hero</button>
        </form>
</div>
<script src="/js/bootstrap.min.js"></script>
</body>
</html>